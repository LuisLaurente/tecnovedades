# Evitar listado de directorios
Options -Indexes

# Proteger el archivo .htaccess
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

# Proteger archivos sensibles
<FilesMatch "^(\.env|.*\.log|composer\.json|composer\.lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
